<Alloy>
	<Window id="signUpWindow" backgroundColor="black">
		<TextField id="firstName" hintText="First Name" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED" color="black" backgroundColor="white" keyboardToolbarColor="#999" keyboardToolbarHeight="40"
            top="40" height="35" width="200"/>   
        <TextField id="lastName" hintText="Last Name" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED" color="black" backgroundColor="white" keyboardToolbarColor="#999" keyboardToolbarHeight="40"
            top="80" height="35" width="200"/>  
		<TextField id="email" hintText="Email" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED" color="black" backgroundColor="white" keyboardToolbarColor="#999" keyboardToolbarHeight="40"
            top="120" height="35" width="200"/>
        <TextField id="password" hintText="Password" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED" color="black" backgroundColor="white" passwordMask="true" keyboardToolbarColor="#999" keyboardToolbarHeight="40"
            top="160" height="35" width="200"/>
        <TextField id="confirmPassword" hintText="Confirm Password" borderStyle="Ti.UI.INPUT_BORDERSTYLE_ROUNDED" color="black" backgroundColor="white" passwordMask="true" keyboardToolbarColor="#999" keyboardToolbarHeight="40"
            top="200" height="35" width="200"/>
        <Label top="260" left="40" text="Join as Coach?"></Label>
        <Switch top="250" left="150" id="coachSwitch" value="false" onChange="doCoachCheck"/>
        <Picker top="300" width="Titanium.UI.FILL" id="activityPicker" onChange="getGrades"></Picker>  
        <Picker top="350" width="Titanium.UI.FILL" id="gradesPicker"></Picker>
        <Button id="joinBtn" top="300" color="white" onClick="doJoinNow">Join Now</Button>
        <Button id="cancelBtn" top="350" color="white" onClick="doCancel">Cancel</Button>
	</Window>
</Alloy>