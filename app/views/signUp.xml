<Alloy>
	<Window id="signUpWindow" backgroundColor="white">
		<TextField id="firstName" hintText="First Name" hintTextColor="#3B3E40" borderStyle="Titanium.UI.INPUT_BORDERSTYLE_LINE" borderColor="#3B3E40" color="black" backgroundColor="white" keyboardToolbarColor="#999" keyboardToolbarHeight="40"
            top="90" height="35" width="200"/>   
        <TextField id="lastName" hintText="Last Name" hintTextColor="#3B3E40" borderStyle="Ti.UI.INPUT_BORDERSTYLE_LINE" borderColor="#3B3E40" color="black" backgroundColor="white" keyboardToolbarColor="#999" keyboardToolbarHeight="40"
            top="130" height="35" width="200"/>  
		<TextField id="email" hintText="Email" hintTextColor="#3B3E40" borderStyle="Ti.UI.INPUT_BORDERSTYLE_LINE" borderColor="#3B3E40" color="black" backgroundColor="white" keyboardToolbarColor="#999" keyboardToolbarHeight="40"
            top="170" height="35" width="200"/>
        <TextField id="password" hintText="Password" hintTextColor="#3B3E40" borderStyle="Ti.UI.INPUT_BORDERSTYLE_LINE" borderColor="#3B3E40" color="black" backgroundColor="white" passwordMask="true" keyboardToolbarColor="#999" keyboardToolbarHeight="40"
            top="210" height="35" width="200"/>
        <TextField id="confirmPassword" hintText="Confirm Password" hintTextColor="#3B3E40" borderStyle="Ti.UI.INPUT_BORDERSTYLE_LINE" borderColor="#3B3E40" color="black" backgroundColor="white" passwordMask="true" keyboardToolbarColor="#999" keyboardToolbarHeight="40"
            top="250" height="35" width="200"/>
        <Button id="joinBtn" backgroundColor="#FA6900" color="white" platform="android" top="290" onClick="doJoinNow">Join Now</Button>
        <Button id="cancelBtn" backgroundColor="#FA6900" color="white" platform="android" top="340" onClick="doCancel">Cancel</Button>
        <Button id="joinBtn" color="#FA6900" platform="ios"  top="290" onClick="doJoinNow">Join Now</Button>
        <Button id="cancelBtn" color="#FA6900" platform="ios" top="340" onClick="doCancel">Cancel</Button>
	</Window>
</Alloy>